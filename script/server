#!/bin/bash -e

cd "$(dirname "$0")/.."

script/update

docker run \
  --rm \
  -it \
  -v "$(pwd)":/usr/src/audiobook-catalog \
  -v /usr/src/audiobook-catalog/node_modules \
  -e APP_ENV=development \
  -e AUTORUN=true \
  -e DB_PATH=/usr/src/audiobook-catalog/development.sqlite3 \
  -p 6451:3000 \
  audiobook-catalog:dev \
  yarn dev