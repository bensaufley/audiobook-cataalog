{
  "compilerOptions": {
    "target": "ESNext",

    "module": "ESNext",
    "baseUrl": "./",
    "paths": {
      "~client/*": ["src/client/*"],
      "~db/*": ["src/db/*"],
      "~icons/*": ["./node_modules/bootstrap-icons/icons/*"],
      "~server/*": ["src/server/*"],
      "~shared/*": ["src/shared/*"],
      "~test/*": ["test/*"]
    },
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,

    "allowJs": true,
    "checkJs": true,

    "jsx": "react-jsx",
    "jsxImportSource": "preact",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": false,

    "outDir": ".build",

    "skipLibCheck": true
  },
  "include": ["./*.js", "./*.ts", "src", "test"],
  "exclude": ["node_modules/@types/react", "node_modules/@types/react-transition-group"]
}
