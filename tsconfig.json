{
  "compilerOptions": {
    "target": "esnext",

    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "~client/*": ["src/client/*"],
      "~db/*": ["src/db/*"],
      "~server/*": ["src/server/*"],
      "~shared/*": ["src/shared/*"],
      "~test/*": ["test/*"]
    },
    "resolveJsonModule": true,

    "allowJs": true,
    "checkJs": true,

    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": false,

    "outDir": ".build",

    "skipLibCheck": true
  },
  "include": ["./*.js", "./*.ts", "src", "test"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
